# RaceCentral 2.0 - Environment Variables
# Copy this file to .env and fill in your values

# Azure Table Storage Connection String
# Get this from Azure Portal -> Storage Account -> Access Keys
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=YOUR_ACCOUNT;AccountKey=YOUR_KEY;EndpointSuffix=core.windows.net

# The Odds API Key
# Get your free API key at https://the-odds-api.com/
THE_ODDS_API_KEY=

# Application Port (optional, defaults to 8000)
PORT=8000

# Environment (development or production)
ENV=production
